

<%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <h3 class="text-center">Change your password</h3>

  <%= f.input :reset_password_token, as: :hidden %>
  <%= f.full_error :reset_password_token %>

    <%= f.input :password, required: true, autofocus: true, label: false, placeholder: "New Password" %>
    <%= f.input :password_confirmation, required: true, label: false, placeholder: "Confirm Password" %>


    <%= f.button :submit, "Change my password", class: "btn btn-primary btn-block" %>
    
    <%= render "devise/shared/links" %>

<% end %>


